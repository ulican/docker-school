pipeline {
    agent any
    
    stages {
        stage('🏗️ Build') {
            steps {
                script {
                    echo "=== Auto-triggered Jenkins Pipeline! ==="
                    echo "Git repository mounted successfully! 🎉"
                    
                    echo "Working directory:"
                    sh 'pwd'
                    
                    echo "Available files in repository:"
                    sh 'ls -la'
                    
                    echo "App folder contents (ready for Docker build):"
                    sh 'ls -la app/'
                    
                    echo "✅ Repository access confirmed!"
                }
            }
        }
    }
}
